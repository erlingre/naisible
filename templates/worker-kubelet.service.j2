[Unit]
Description=kubelet: The Kubernetes Node Agent
Documentation=http://kubernetes.io/docs/

[Service]
ExecStart=/usr/bin/kubelet --api-servers=https://{{ master_ip }}:6443 --kubeconfig=/etc/kubernetes/kubeconfigs/kubelet.conf

Restart=always
StartLimitInterval=0
RestartSec=10

[Install]
WantedBy=multi-user.target
